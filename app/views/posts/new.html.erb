	
<div id="page_wrapper">
	<h1>New posts</h1>

	<%=form_for :post, url: posts_path do |f| %>
		<%if @post.errors.any? %>
			<div id="errors">
				<h4><%= pluralize(@post.errors.count, "error") %> prevent this post from saving</h4>
				<ul>
					<% @post.errors.full_messages.each do |msg|%>
						<li><%= msg %></li>
					<%end%>
				</ul>
			</div>
		<%end%>

			<%= f.label :title %><br>
			<%= f.text_field :title %><br>
			<br>
			<%= f.label :body %><br>
			<%= f.text_area :body %><br>

			<%= f.submit %>
	<% end %>
</div>