<%=form_for @post do |f| %>
	<%if @post.errors.any? %>
		<div id="errors">
			<h4><%= pluralize(@post.errors.count, "error") %> prevent this post from saving</h4>
			<ul>
				<% @post.errors.full_messages.each do |msg|%>
					<li><%= msg %></li>
				<%end%>
			</ul>
		</div>
	<%end%>
		<p>
			<%= f.label :title %><br>
			<%= f.text_field :title %><br>
		</p>
		<p>
			<%= f.label :body %><br>
			<%= f.text_area :body %><br>
		</p>

		<p>
			<%= f.submit %>
		</p>
	<% end %>