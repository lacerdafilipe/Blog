<div id="post_content">
	

	<h1 class="tittle"><%= @post.title %></h1>
	<p class="date">Submitted <%= time_ago_in_words(@post.created_at) %> Ago</p>

	<p class="body"><%= @post.body %></p>

	<diV class="buttons">
		<button class="button"><%= link_to "Back to home", root_path %> </button>
			<button class="button"><%= link_to "Edit", edit_post_path(@post)%></button> 
			<button class="button"><%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}%></button>
	</diV>
</div>	